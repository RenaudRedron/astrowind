---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Error 404`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span data-i18n="error404.title.first" class="sr-only">Error</span>
          <span data-i18n="error404.title.second" class="text-primary">404</span>
        </h2>
        <p data-i18n="error.message.page_not_found" class="text-3xl font-semibold md:text-3xl">Sorry, we couldn't find this page.</p>
        <p data-i18n="error.message.suggestion_homepage" class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          But dont worry, you can find plenty of other things on our homepage.
        </p>
        <a data-i18n="action.back_to_homepage" rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
