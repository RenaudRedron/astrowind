---
import { Icon } from 'astro-icon/components';

import type { Note as Props } from '~/types';

const {
  translationKey,
} = Astro.props;

---


<section class="bg-blue-50 dark:bg-slate-800 not-prose">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
    <span class="font-bold">
      <Icon name="tabler:info-square" class="w-5 h-5 inline-block align-text-bottom" /> <span data-i18n={`${translationKey}.note.bold`}>Philosophy:</span></span
    > <span data-i18n={`${translationKey}.note.message`}>Simplicity, Best Practices and High Performance</span>
  </div>
</section>
